# =======================
# BACKEND (.env em backend/)
# =======================

# Servidor
PORT=3000
NODE_ENV=development

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173,http://127.0.0.1:5174,https://digimenu.vercel.app

# Segurança (OBRIGATÓRIO EM PRODUÇÃO)
JWT_SECRET=seu-jwt-secret-super-seguro-minimo-32-caracteres-aqui

# Banco de Dados (OBRIGATÓRIO EM PRODUÇÃO)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/digimenu

# Redis (opcional, recomendado para produção)
REDIS_URL=redis://localhost:6379
# ou
REDIS_HOST=localhost
REDIS_PORT=6379

# Cloudinary (para upload de imagens)
CLOUDINARY_CLOUD_NAME=seu-cloud-name
CLOUDINARY_API_KEY=sua-api-key
CLOUDINARY_API_SECRET=sua-api-secret

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Sentry (opcional, recomendado para produção)
SENTRY_DSN=https://seu-dsn@sentry.io/projeto

# Backup (opcional)
BACKUP_DIR=./backups
BACKUP_INTERVAL=86400000
MAX_BACKUPS=7

# Assistente com IA (opcional — respostas inteligentes no chatbot do cardápio)
OPENAI_API_KEY=
# OPENAI_CHAT_MODEL=gpt-3.5-turbo
